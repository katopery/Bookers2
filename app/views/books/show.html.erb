<div class="container">
  <div class="row">
    
    <%= render 'list', book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      
      <table class="table">
        <tbody>
          <tr>
            <td>
              <% if @book.image.attached? %>
                <%= image_tag book.user.get_profile_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
              </br>
              <%= link_to @book.user.name, user_path(current_user) %>
            </td>
            <td>
              <%= link_to @book.title, book_path %>
            </td>
            <td><%= @book.body %></td>
            
            <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success"%>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>