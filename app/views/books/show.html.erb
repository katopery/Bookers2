<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/userinfo', user: current_user %>
      
      <h2 class="mt-3">New book</h2>
      <%= render 'newbook', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path do %>
                <% if @book.image.attached? %>
                  <%= image_tag book.image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no_image', size: "80x80" %>
                <% end %>
                </br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path %>
            </td>
            <td><%= @book.body %></td>
            
            <% if @book.user_id == current_user.id %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success"%>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>