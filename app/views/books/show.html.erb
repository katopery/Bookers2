<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/userinfo', user: @book.user %>
      
      <h2 class="mt-3">New book</h2>
      <%= render 'newbook', book: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to @book.user do %>
                <%= image_tag @book.user.get_profile_image, size:'80x80' %>
                </br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path %>
            </td>
            <td><%= @book.body %></td>
            
            <% if @book.user_id == current_user.id %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success"%>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>