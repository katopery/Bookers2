<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <p>画像</p>
      
      <% @books.each do |book| %>
        <% if book.image.attached? %>
          <%= image_tag book.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
  
        <table>
          <tbody>
            <tr>
              <td>name</td>
              <td><%= book.user.name %></td>
            </tr>
            <tr>
              <td>introduction</td>
              <td><%= book.user.introduction %></td>
            </tr>
          </tbody>
        </table>
      <% end %>

      <%= link_to edit_user_path(current_user) do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>

      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <lavel>Title</lavel>
        <%= f.text_field :title %>
        <lavel>Opinion</lavel>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="table table-hover ">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>        
                <% if book.image.attached? %>
                  <%= image_tag book.image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no_image', size: "80x80" %>
                <% end %>
              </td>
              <td>
                 <%= link_to book.title, book_path(book.id) %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>