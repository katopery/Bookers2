<div class="container">
  <div class="row">
    
    <%= render 'list', book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.id) do %>
                  <% if book.image.attached? %>
                    <%= image_tag book.image, size: "80x80" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "80x80" %>
                  <% end %>
                <% end %>
              </td>
              <td>
                 <%= link_to book.title, book_path(book.id) %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>