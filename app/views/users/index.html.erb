<div class="container">
  <div class="row">
    
    <%= render 'books/list', book: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.image.attached? %>
                  <%= image_tag user.image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no_image', size: "80x80" %>
                <% end %>
              </td>
              <td>
                 <%= link_to user.title, user_path(user.id) %>
              </td>
              <td><%= user.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>