<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'userinfo', user: current_user %>
      
      <h2 class="mt-3">New book</h2>
      <%= render 'books/newbook', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |books| %>
            <tr>
              <td>
                <%= link_to user_path(books.id) do %>
                  <%= image_tag books.user.get_profile_image, size:'80x80' %>
                <% end %>
              </td>
              <td>
                 <%= link_to books.title, book_path(books.id) %>
              </td>
              <td><%= books.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>